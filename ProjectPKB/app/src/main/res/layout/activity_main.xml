<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/bgApp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ups_service" />

        <ImageView
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:background="@color/actionBar"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <EditText
                android:gravity="center"
                android:background="@color/white"
                android:padding="4dp"
                android:id="@+id/editTextScode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Service Code"
                android:inputType="text"/>

        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/actionBar"
            android:textColor="@color/white"
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/search_foreground"
            android:text="Search"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>